@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
    {
        @Html.AntiForgeryToken()
        <li style="background-color:#3c8dbc; margin:10px;">
            <button type="submit" class="btn btn-primary btn-flat" style="background-color:#3c8dbc; border:none; box-shadow:none;"><i class="fa fa-sign-out"></i> &nbsp; @Resources.Constant.LOGOFF</button>
        </li>
    }
}
else
{
    <li>
        <a href="@Url.Action("Register", "Account", routeValues: null)" id="registerLink"><i class="fa fa-user-plus"></i> &nbsp; @Resources.Constant.REGISTER</a>
    </li>
    <li>
        <a href="@Url.Action("Login", "Account", routeValues: null)" id="loginLink"><i class="fa fa-sign-in"></i> &nbsp; @Resources.Constant.SIGNIN</a>
    </li>
}