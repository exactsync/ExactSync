@model ExactSync.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    ViewBag.BodyClass = "register-page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="register-box">
    <div class="register-box-body">

        <div class="register-logo">
            <strong class="label label-danger">Exact</strong>&nbsp;<small>sync</small>
        </div><!-- /.login-logo -->

        <p class="login-box-msg">@Resources.Constant.CREATE_ACCOUNT</p>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @Resources.Constant.EMAIL_ADDR })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @Resources.Constant.PASSWORD })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = @Resources.Constant.CONFIRM_PASSWORD })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div style="float: left; padding-left: 15px;"></div><!-- /.col -->
                <div style="float: right; padding-right: 15px;">
                    <button type="submit" class="btn btn-primary btn-block btn-flat"><i class="fa fa-share-square-o"></i> @Resources.Constant.REGISTER</button>
                </div><!-- /.col -->
            </div>
        }

        @Html.ActionLink(@Resources.Constant.LOGIN_LINK, "Login")
    </div><!-- /.form-box -->
</div><!-- /.register-box -->
@section Scripts {}
